<div class='account-page' id='account-page'>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--left account-page__header'>
      <h2>スタッフ用</h2>
      <h5>新規アカウントの作成</h5>
    </div>
    <div class='account-page__inner--right user-form'>
     <%= form_with(model: @staff, local: true) do |f| %>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :名前%>
          </div>
          <div class='field-input'>
            <%= f.text_field :name, autofocus: true%>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :画像%>
          </div>
          <div class='field-input'>
            <%= f.file_field :image%>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :性別%>
          </div>
          <div class='field-input'>
            <%= f.text_area :gender%>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :年齢%>
          </div>
          <div class='field-input'>
            <%= f.text_field :age%>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :得意なこと%>
          </div>
          <div class='field-input'>
            <%= f.text_area :advantage%>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :役職%>
          </div>
          <div class='field-input'>
            <%= f.text_field :position%>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :アピールポイント%>
          </div>
          <div class='field-input'>
            <%= f.text_area :appeal%>
          </div>
        </div>

        <div class='actions'>
          <%= f.submit "アカウント作成", class: 'btn'%>
        </div>
      </div>
      
    <% end %>
  </div>
</div>