<div class='account-page' id='account-page'>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--left account-page__header'>
      <h2>スタッフ編集</h2>
      <li><%= link_to 'TOPページへ', root_path, class: "btn" %></li>
    </div>
    <div class='account-page__inner--right user-form'>
     <%= form_with(model: @staff, local: true) do |f| %>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :名前%>
          </div>
          <div class='field-input'>
            <%= f.text_field :name, autofocus: true%>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :画像%>
          </div>
          <div class='field-input'>
            <%= f.file_field :image%>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :性別%>
             <i>(選択してください)</i>
          </div>
          <div class='field-input'>
            <%= f.collection_select(:gender_id, Gender.all, :id, :name, {}, {class:"gender-select"})%>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :年齢%>
             <i>(半角数字で入力)</i>
          </div>
          <div class='field-input'>
            <%= f.text_field :age, autofocus: true%>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :得意なこと%>
          </div>
          <div class='field-input'>
            <%= f.text_area :advantage, autofocus: true%>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :役職%>
          </div>
          <div class='field-input'>
            <%= f.text_field :position, autofocus: true%>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :アピールポイント%>
          </div>
          <div class='field-input'>
            <%= f.text_area :appeal, autofocus: true%>
          </div>
        </div>

        <div class='actions'>
          <%= f.submit "更新", class: 'btn'%>
        </div>
      </div>
      
    <% end %>
  </div>
</div>