<h2><%= current_user.name + "さんのページ" %></h2>

<table class="table">
   <div class='staff-profile'>
     <tr>
       <th class="table__col1">お名前</th>
       <td class="table__col2"><%=@user.name %></td>
     </tr>
     <tr>
       <th class="table__col1">年齢</th>
       <td class="table__col2"><%= @user.age %>歳</td>
     </tr>
     <tr>
       <th class="table__col1">性別</th>
       <td class="table__col2"><%= @user.gender.name %></td>
     </tr>
     <tr>
       <th class="table__col1">お悩み</th>
       <td class="table__col2"><%= @user.trouble %></td>
      </tr>
      <tr>
       <th class="table__col1">職業</th>
       <td class="table__col2"><%= @user.occupation %></td>
      </tr>
    </div>
</table>

<li><%= link_to '編集する',  edit_user_path, class: "btn" %></li>
<li><%= link_to '削除する', user_path, method: :delete, class: "btn" %></li> 

<h2><%= current_user.name + "様の予約表" %></h2>
 <%= week_calendar events:@appoints do |date, appoints| %>
  <%= date.day %>
  <% appoints.each do |appoint| %>
   <% if current_user.id == appoint.user.id %>
    <div>✅<%= appoint.user.name %>様 </div>
    <div><%= appoint.time_select.name %>予約完了 </div>
    <% end %>
  <% end %>
<% end %>

<%= link_to 'TOPページへ', root_path, class: "btn" %>
