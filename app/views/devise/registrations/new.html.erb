<div class='account-page' id='account-page'>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--left account-page__header'>
      <h2>お客様用</h2>
      <h5>新規アカウントの作成</h5>
      <li><%= link_to 'TOPページへ', root_path, class: "btn" %></li>
    </div>
    <div class='account-page__inner--right user-form'>
      <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true do |f|%>
      <%= devise_error_messages!%>


        <div class='field'>
          <div class='field-label'>
            <%= f.label :名前%>
          </div>
          <div class='field-input'>
            <%= f.text_field :name, autofocus: true%>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :メールアドレス%>
          </div>
          <div class='field-input'>
            <%= f.email_field :email%>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :パスワード%>
             <i>(半角英数字6文字以上で入力してください)</i>
          </div>
          <div class='field-input'>
            <%= f.password_field :password, autocomplete: "off"%>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :パスワード%>
            <i>(確認用)</i>
          </div>
          <div class='field-input'>
            <%= f.password_field :password_confirmation, autocomplete: "off"%>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :年齢%>
            <i>(半角数字で入力してください)</i>
          </div>
          <div class='field-input'>
            <%= f.text_field :age, autofocus: true%>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :性別%>
            <i>(選択してください)</i>
          </div>
          <div class='field-input'>
            <%= f.collection_select(:gender_id, Gender.all, :id, :name, {}, {class:"gender-select"}) %>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :職業%>
            <i>(任意)</i>
          </div>
          <div class='field-input'>
            <%= f.text_field :occupation, autofocus: true%>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :電話番号%>
            <i>(半角数字で入力してください)</i>
          </div>
          <div class='field-input'>
            <%= f.text_field :phone, autofocus: true%>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :悩み%>
            <i>(任意)</i>
          </div>
          <div class='field-input'>
            <%= f.text_area :trouble, autofocus: true%>
          </div>
        </div>

        <div class='actions'>
          <%= f.submit "アカウント作成", class: 'btn'%>
        </div>
      </div>
      
    <% end %>
  </div>
</div>